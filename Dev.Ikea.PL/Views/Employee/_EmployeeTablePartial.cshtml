@model IEnumerable<GetAllDTO>


<table class="table table-striped text-center mt-4">
    <thead>
        <tr>
            <td class="fw-bold">@Html.DisplayNameFor(D => D.Name)</td>
            <td class="fw-bold">@Html.DisplayNameFor(D => D.Department)</td>
            <td class="fw-bold">@Html.DisplayNameFor(D => D.Email)</td>
            <td class="fw-bold">@Html.DisplayNameFor(D => D.PhoneNumber)</td>
            <td class="fw-bold">@Html.DisplayNameFor(D => D.EmployeeType)</td>
            <td class="fw-bold">Details</td>
            <td class="fw-bold">Update</td>
            <td class="fw-bold">Delete</td>
        </tr>
    </thead>

    <tbody class="text-center">

        @foreach (var employee in Model)
        {
            <tr id="Emp">

                <td>@employee.Name</td>
                <td>@employee.Department</td>
                <td>@employee.Email</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.EmployeeType</td>

                <td>
                    <a asp-controller="Employee" asp-action="GetEmployeeById" asp-route-id="@employee.Id" class="btn btn-warning">
                        <i class="fas fa-eye"></i> Details
                    </a>
                </td>

                <td>
                    <a asp-controller="Employee" asp-action="UpdateEmployee" asp-route-id="@employee.Id" class="btn btn-success">
                        <i class="fas fa-edit"></i> Update
                    </a>
                </td>

                <td>
                    @* <a asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete *@

                    <a type="button" class="btn btn-danger" data-bs-toggle="modal" asp-route-id="@employee.Id" data-bs-target="#deleteModal-@employee.Id">
                        <i class="fas fa-trash"></i> Delete
                    </a>

                </td>

            </tr>
            <!-- Modal -->
            <div class="modal fade" id="deleteModal-@employee.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Delete</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Will Delete Employee
                        </div>
                        <div class="modal-footer">
                            <form asp-action="DeleteEmployee" asp-route-id="@employee.Id" method="post">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


        }

    </tbody>

</table>