@model AddEmployeeDTO

@{
    ViewData["Title"] = "AddEmployee";

    var departments = new SelectList(ViewData["Departments"] as IEnumerable<DepartmentToReturnDTO>, "Id", "Name");
}

<h1>Add Employee</h1>

<link rel="stylesheet" href="~/css/radioStyle.css" asp-append-version="true" />

<form  asp-controller="Employee" asp-action="AddEmployee" method="post">

    <div asp-validation-summary="ModelOnly"></div>

    <div class="mt-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Address"></label>
        <textarea asp-for="Address" class="form-control"> </textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="IsActive"></label>
        <input type="text" asp-for="IsActive" class="form-control" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="PhoneNumber"></label>
        <input type="tel" asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    
    <div class="mt-3">
        <label asp-for="DepartmentId" class="control-label mb-2"></label>
        <select asp-for="DepartmentId" asp-items="departments" class="form-control">
            <option value="@null">Choose...</option>
        </select>
    </div>

    <div class="mt-3">
        <label asp-for="HiringDate"></label>
        <input type="date" asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <div class="main">
            Gender
            @foreach (var radio in Enum.GetValues(typeof(Gender)))
            {
                <div class="form-check">
                    <input asp-for="Gender" value="@radio" class="form-check-input" type="radio" id="flexRadioDefault1">
                    <label class="form-check-label" asp-for="Gender">
                        @radio
                    </label>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <label asp-for="EmployeeType"></label>
        <input asp-for="EmployeeType" class="form-control" />
        <span asp-validation-for="EmployeeType" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-success" />
        <a asp-controller="Employee" asp-action="Index" class="btn btn-danger">Cancel</a>
    </div>

</form>
