@model EmployeeUpdateViewModel

@{
    ViewData["Title"] = "UpdateEmployee";

    var departments = new SelectList(ViewData["Departments"] as IEnumerable<DepartmentToReturnDTO>, "Id", "Name");
}

<h1>UpdateEmployee</h1>

<!DOCTYPE html>
<html>
<head>
	<title>Pure CSS3 Tabs</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/3.1.0/css/font-awesome.min.css" />
	@* <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" /> *@
</head>
<body>

    <div class="container">

        <form asp-controller="Employee" asp-action="UpdateEmployee" class="well form-horizontal" method="post" id="contact_form">

            <fieldset>

                <!-- Text input-->

                <div class="form-group">
                    <label asp-for="Name" class="col-md-4 control-label">Name</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <input asp-for="Name" class="form-control" type="text">
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label asp-for="Age" class="col-md-4 control-label">Age</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">

                            <input asp-for="Age" class="form-control" type="text">
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label asp-for="Address" class="col-md-4 control-label">Address</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">

                            <input asp-for="Address" class="form-control" type="text">
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label asp-for="Salary" class="col-md-4 control-label">Salary</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">

                            <input asp-for="Salary" class="form-control" type="text">
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label asp-for="IsActive" class="col-md-4 control-label">IsActive</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">

                            <input asp-for="IsActive" class="form-control" type="text">
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label asp-for="Email" class="col-md-4 control-label">Email</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">

                            <input asp-for="Email" class="form-control" type="text">
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="DepartmentId" class="control-label col-md-4  mb-2"></label>
                    <select asp-for="DepartmentId" asp-items="departments" class="form-control">
                        <option value="@null">Choose...</option>
                    </select>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="col-md-4 control-label">Phone Number</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">

                            <input asp-for="PhoneNumber"class="form-control" type="tel">
                        </div>
                    </div>
                </div> 
                
                
                <!-- Text input-->

                <div class="form-group">
                    <label asp-for="EmployeeType" class="col-md-4 control-label">Employee Type</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">

                            <input asp-for="EmployeeType"class="form-control" type="text">
                        </div>
                    </div>
                </div>

                <!-- radio checks -->

                <div class="form-group">
                    <label class="control-label" asp-for="Gender"></label><br />
                    @foreach (var genderOption in Enum.GetValues(typeof(Gender)))
                    {
                        <div class="form-check"> 

                            <input type="radio" class="form-check-input" asp-for="Gender" value="@genderOption" />
                            <label class="form-check-label" asp-for="Gender">
                                @genderOption
                            </label>
                        </div>
                    }

                </div>


               
                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
	
</body>
</html>


